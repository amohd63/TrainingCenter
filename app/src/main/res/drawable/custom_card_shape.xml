<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded top corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#daf88e" />
            <corners android:radius="48dp" />
        </shape>
    </item>
    <!-- Rectangle for the bottom part -->
    <item
        android:top="20dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#daf88e" />
        </shape>
    </item>
</layer-list>
